---
import Navbar from "../components/NavBar.astro";
import ThemeButton from "../components/ThemeButton.astro";
import Footer from "../components/Footer.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/gator.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="https://unpkg.com/feather-icons"></script></head
  >

  <body class="bg-white dark:bg-black dark:text-white text-black font-sans">
    <ThemeButton />
    <Navbar />
    <main class="flex flex-col items-center">
      <div class="lg:w-1/2 flex-col flex items-center w-3/4">
        <slot />
      </div>
    </main>
    <Footer />
    <!-- <script src="index.js"></script> -->
  </body>
</html>
