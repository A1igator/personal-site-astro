---
import SiteLayout from "../layouts/SiteLayout.astro";
const allPosts = await Astro.glob("./content/*.md");
---

<SiteLayout title="Blog">
  <ul>
    {
      allPosts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</SiteLayout>
